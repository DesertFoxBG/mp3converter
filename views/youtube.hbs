            <div class="form-container">
                <form action="/ytinfo" method="get">
                    <input class="input_url" type="text" placeholder="Enter the video link ..." name="url"
                        required><input type="submit" value="Download">
                </form>
            </div>
        </div>

        <div class="information">
            {{{ info }}}
        </div>
    </div>

    <script src="./javascripts/dropdown.js"></script>

    <script>
        function showMore() {
            var dots = document.getElementById("dots");
            var moreText = document.getElementById("more");
            var btnText = document.getElementById("showmore");

            if (dots.style.display === "none") {
                dots.style.display = "block";
                btnText.innerHTML = '<i class="fas fa-sort-down"></i>';
                moreText.style.display = "none";
            } else {
                dots.style.display = "none";
                btnText.innerHTML = '<i class="fas fa-sort-up"></i>';
                moreText.style.display = "block";
            }
        }
    </script>
